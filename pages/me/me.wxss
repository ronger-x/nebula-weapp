/* miniprogram/pages/me/me.wxss */

.userinfo {
  height: 320rpx;
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  background-image: url('https://img.yzcdn.cn/upload_files/2019/01/31/Fp3kIohim8ZiB1yLepoMMW8is_qY.png')
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 30rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  background-color: white;
  background-size: cover;
  margin: 20rpx 90rpx;
}

.userinfo-nickname::after {
  border: none;
}

.user-panel {
  width: 95vw;
  margin: 20rpx 20rpx 0 20rpx ;
}


.mb-10 {
  margin-bottom: 20rpx;
  border-bottom-right-radius: 20rpx;
}